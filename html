    <script src="script.js"></script>

    <script>
        document.getElementById('cakeType').addEventListener('change', function() {
            const customization = document.getElementById('fruitcakeCustomization');
            if (this.value === 'Fruitcake (customization required)') {
                customization.style.display = 'block';
                document.getElementById('fruitcakeDetails').required = true;
            } else {
                customization.style.display = 'none';
                document.getElementById('fruitcakeDetails').required = false;
            }
        });
    </script>
